    <TypeScriptCompile Include="wwwroot\js\rulesDrawer.ts" />
    <TypeScriptCompile Include="wwwroot\js\serverRepository.ts" />
    <TypeScriptCompile Include="wwwroot\js\squareDrawer.ts" />
  </ItemGroup>

